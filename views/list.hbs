<body>
<div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand">Fluffy Adventure</h3>
              <nav>
                <ul class="nav masthead-nav">
                  <li><a href="/">Home</a></li>
                  <li class="active"><a href="/story">Manage</a></li>
                </ul>
              </nav>
            </div>
          </div>

          <div class="inner cover">
            <h1 class="cover-heading">{{stories.begining.content}}</h1>
            <p class="lead">{{stories.middle.content}}</p>
            <p class="lead">{{stories.end.content}}</p>

            <div class="lead">
              <button type="button" id='add-btn' class="btn btn-lg btn-default">Add</button>
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>_id</th>
                    <th>Content</th>
                    <th>Type</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                {{#each stories}}
                  <tr>
                    <td>{{_id}}</td>
                    <td>{{content}}</td>
                    <td>{{type}}</td>
                    <td>
                        <a href="/story/" data-segment-id="{{_id}}" class="delete-segment" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        <a href="/" data-segment-id="{{_id}}" class="edit-segment"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
              </table>
            </div>


          <div class="modal-dialog" id="upsert-modal">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close modal-close-btn" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
              </div>
              <div class="modal-body">
                <form id="upsert-form">
                  <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" rows="3" id="content" name="content" placeholder="Cotent"></textarea>
                  </div>
                  <div class="form-group">
                    <input type="hidden"  id="id" name="id"/>
                    <label for="type">Type</label>
                    <select id="type" name="type" class="form-control">
                      <option value="1">Begining</option>
                      <option value="2">Middle</option>
                      <option value="3">End</option>
                    </select>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" id='modal-close-btn'class="btn btn-default modal-close-btn" data-dismiss="modal">Close</button>
                <button type="button" id='form-btn-upsert' class="btn btn-primary">Save changes</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->



          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Node js story generator example by Asa Carrington</p>
            </div>
          </div>

        </div>

      </div>

    </div>

